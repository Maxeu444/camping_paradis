generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  password   String
  role       Role     @default(CLIENT)
  tokenVersion Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  reservations Reservation[]
}

enum Role {
  ADMIN
  CLIENT
}

model Location {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  pricePerNight Float
  capacity    Int
  isAvailable Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  reservations Reservation[]
  photos       Photo[]
}

model Reservation {
  id              Int      @id @default(autoincrement())
  startDate       DateTime
  endDate         DateTime
  totalPrice      Float
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user            User     @relation(fields: [userId], references: [id])
  userId          Int

  location   Location @relation(fields: [locationId], references: [id])
  locationId Int
}

model Photo {
  id            Int      @id @default(autoincrement())
  url           String
  description   String?
  location      Location? @relation(fields: [locationId], references: [id])
  locationId    Int?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Promotion {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  discount    Float
  startDate   DateTime
  endDate     DateTime
  isActive    Boolean @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}